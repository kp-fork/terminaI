{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TerminaI",
  "version": "0.21.0",
  "identifier": "ai.terminai.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "TerminaI",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 500,
        "resizable": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["resources/**/*"],
    "externalBin": ["bin/terminai-cli"],
    "shortDescription": "AI-powered terminal assistant with voice and agentic capabilities",
    "longDescription": "TerminaI is a powerful AI assistant that runs in your terminal, featuring voice interaction, agentic task execution, and seamless integration with your development workflow."
  }
}
